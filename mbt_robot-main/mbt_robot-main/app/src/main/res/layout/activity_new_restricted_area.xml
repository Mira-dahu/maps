<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".New_Restricted_Area">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"


        app:title="    取消"

        app:titleMarginStart="10dp"
        app:titleTextColor="@color/white"></androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/hiddenBack11"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:alpha="0"
        android:onClick="destroyTheActivity"
        android:text="Button"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="375dp"
        android:background="@drawable/ba"
        android:onClick="destroyTheActivity"></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:textStyle="bold"

        android:layout_marginTop="59dp"
        android:text="  区域与禁区管理"
        android:textColor="@color/white"
        android:textSize="45dp">
    </TextView>
    <ImageView
        android:id="@+id/mark_obz_background"
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30.5dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="30.5dp"
        android:background="@drawable/radius_border"
        android:scaleType="fitCenter"
        android:src="@drawable/img_9" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="465dp"

        android:layout_marginEnd="30dp"
        android:text="在地图上画出您需要机器人禁止进入的区域"
        android:textColor="@color/grey"
        android:textSize="10dp"></TextView>

    <Button
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="484dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/radius_border"
        android:gravity="center_vertical|left"
        android:stateListAnimator="@null"
        android:text="      设置禁止时间"
        android:textSize="20dp">

    </Button>

    <Button

        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/radius_border"
        android:text="保存"
        android:textSize="20dp">

    </Button>

    <Button

        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="610dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/radius_border"
        android:text="删除禁区"
        android:textColor="@color/red"
        android:textSize="20dp">

    </Button>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="490dp"
        android:layout_marginEnd="40dp"
        android:src="@mipmap/img">

    </ImageView>


</RelativeLayout>